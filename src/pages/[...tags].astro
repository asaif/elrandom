---
import TagList from '@/components/TagList.astro'
import { defaultLocale, moreLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'
import { getAllTags, getPostsGroupByTags } from '@/utils/content'

export async function getStaticPaths() {
  type PathItem = {
    params: { tags: string }
    props: { lang: string }
  }

  const paths: PathItem[] = []

  // Default locale
  paths.push({
    params: { tags: 'tags/' },
    props: { lang: defaultLocale },
  })

  // More locales
  moreLocales.forEach((lang: string) => {
    paths.push({
      params: { tags: `${lang}/tags/` },
      props: { lang },
    })
  })

  return paths
}

const { lang } = Astro.props
const allTags = await getAllTags(lang)
const tagMap = await getPostsGroupByTags(lang)

// Add post counts to tags for better sorting
const tagsWithCounts = allTags.map(tag => ({
  name: tag,
  count: tagMap.get(tag)?.length || 0
}))

// Sort by post count (most popular first)
const sortedTags = tagsWithCounts
  .sort((a, b) => b.count - a.count)
  .map(tag => tag.name)
---

<Layout>
  <!-- Decorative Line -->
  <div class="uno-decorative-line" />
  
  <!-- Simple Tag List with better sorting -->
  <TagList
    tags={sortedTags}
    lang={lang}
  />
</Layout>