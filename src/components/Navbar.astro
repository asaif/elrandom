---
import { getNavigationItemsWithClasses } from '@/utils/navigation'
import { getPageInfo } from '@/utils/page'

const { isPost, getLocalizedPath } = getPageInfo(Astro.url.pathname)
const navItems = getNavigationItemsWithClasses(Astro.url.pathname)
---

<!-- Desktop Navigation - Hidden on mobile -->
<nav
  aria-label="Site Navigation"
  class:list={[
    'hidden lg:block', // Always hidden on mobile, visible on desktop
    'mb-10.5 text-3.6 font-semibold leading-2.45em font-navbar',
    'lg:(uno-desktop-column text-4 bottom-[min(9.04rem+3.85vw,12.5rem)]) cjk:tracking-0.02em',
  ]}
>
  <ul>
    {navItems.map(item => (
      <li>
        <a
          href={getLocalizedPath(item.href)}
          class={item.className}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
